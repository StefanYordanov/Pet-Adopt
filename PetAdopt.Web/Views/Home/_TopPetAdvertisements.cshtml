@using PetAdopt.Common
@model PetAdopt.Web.Models.ViewModels.Home.HomeViewModel


<div class="row">
    <div class="col-md-6">
        <div class="jumbotron site-jumbotron">
            <h2>Top 5 pets for adoption:</h2>
            @foreach (var advertisement in Model.TopAdvertisements)
            {
                <a href="/Pets/Advertisement/Details/@(advertisement.Id)?date=@(advertisement.CreatedOn.ToString(PetAdopt.Common.DateTimeExtensions.UrlDateTimeFormat))">
                    <div class="row bright padded">
                        <div class="col-md-6">
                            <img src="@advertisement.PictureUrl" height="200px" width="200px" />
                        </div>
                        <div>
                            <p><strong>@advertisement.Name</strong> @PetAdopt.Common.DateTimeExtensions.GetAge(advertisement.BirthDate)</p>
                            <p>@advertisement.Type</p>
                            <p>Price: @(advertisement.Cost != 0 ? advertisement.Cost.ToString() : "Free")</p>
                            <p>Candidatures: @(advertisement.CandidaturesCount)</p>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
    <div class="col-md-6">
        <div class="jumbotron site-jumbotron">
            <h2>Latest 5 pets for adoption:</h2>
